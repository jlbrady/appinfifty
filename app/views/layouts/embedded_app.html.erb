<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <title>Test Layout</title>
        <style type="text/css">
            body, html
            {
                margin: 0; padding: 0; height: 100%; overflow: hidden;
            }

            #content
            {
                position:absolute; left: 0; right: 0; bottom: 0; top: 0px;
            }
        </style>
    </head>

  <body>
    <%= render 'layouts/flash_messages' %>

    <script src="https://cdn.shopify.com/s/assets/external/app.js?<%= Time.now.strftime('%Y%m%d%H') %>"></script>

    <script type="text/javascript">
      ShopifyApp.init({
        apiKey: "<%= ShopifyApp.configuration.api_key %>",
        shopOrigin: "<%= "https://#{ @shop_session.url }" if @shop_session %>",
        debug: true,
        forceRedirect: true
      });
    </script>
    <script type="text/javascript">
        ShopifyApp.ready(function(){
            ShopifyApp.Bar.initialize({});
        });
        //console.log("Session URL: <%= "#{ @shop_session.url }" if @shop_session %>");
        //console.log("Shop Name: <%= ShopifyAPI::Shop.current.name %>");
        //console.log("Shop Access Token: <%= ShopifyAPI::Shop.headers['X-Shopify-Access-Token'] %>");
    </script>
    <script type="text/javascript">
      // cant use html_safe here need to sanitize inputs
      var shopObj = <%= ShopifyAPI::Shop.current.to_json.to_s.html_safe %>;
      var accessToken = "<%= ShopifyAPI::Shop.headers['X-Shopify-Access-Token'] %>";
      window.addEventListener("message", function receiveMessage(event)
      {
          if (event.origin !== "https://dabc6b16.ngrok.io") {
              console.log("Error Different Origin: " + event.origin);
          } else if (event.data === "modalOpened") {
              event.source.postMessage(shopObj, "https://dabc6b16.ngrok.io");
              event.source.postMessage(accessToken, "https://dabc6b16.ngrok.io");
          }
      }, false);
    </script>

      <iframe width="100%" height="100%" frameborder="0" src="https://dabc6b16.ngrok.io"/>

    <% if content_for?(:javascript) %>
      <div id="ContentForJavascript" data-turbolinks-temporary>
        <%= yield :javascript %>
      </div>
    <% end %>
  </body>
</html>
